<div class="navbar bg-base-100 shadow-sm">
  <div class="flex-1">
    <%= link_to "Tachyon", root_path, class: "btn btn-ghost text-xl" %>
  </div>
  <div class="flex gap-2 items-center">
    <% if user_signed_in? %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <% unless current_user.avatar.file.nil? %>
              <%= image_tag(current_user.avatar.thumb.url, alt: "Imagen de perfil #{current_user.name}") %>
            <% end %>
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
          <li><%= link_to "Profile", profile_path %></li>
          <li><%= button_to "Logout", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    <% else %>
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to "Login", new_user_session_path %></li>
      </ul>
    <% end %>
  </div>
</div>
