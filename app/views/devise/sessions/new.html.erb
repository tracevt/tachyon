<div class="grid justify-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4" }) do |f| %>
    <legend class="fieldset-legend">Login</legend>

    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder:"name@example.com" %>

    <%= f.label :password, class:"label" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input" %>

    <% if devise_mapping.rememberable? %>
      <%= f.label :remember_me, class:"label mt-4" do |builder| %>
        <%= f.check_box :remember_me, class:"checkbox" %>
        <%= builder.translation %>
      <% end %>
    <% end %>

    <div>
      <%= f.submit "Log in", class:"btn btn-neutral mt-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
